# SeedDream (WaveSpeed AI) Configuration
SEEDREAM_API_KEY=your-seedream-api-key-here

# Redis Configuration (required for global rate limiting)
REDIS_URL=redis://localhost:6379

# CORS Configuration (CORS_ORIGIN ha priorit√† su FRONTEND_ORIGIN)
CORS_ORIGIN=http://localhost:3000
# FRONTEND_ORIGIN=http://localhost:3000  # Deprecato, usa CORS_ORIGIN

# Rate Limiting
GLOBAL_LIMIT_PER_HOUR=10
GLOBAL_WINDOW_SECONDS=3600
IP_LIMIT_PER_HOUR=20

# Upload Limits
MAX_UPLOAD_MB=10

# Image Generation Defaults
DEFAULT_SIZE=1024x1024
DEFAULT_QUALITY=medium
DEFAULT_OUTPUT_FORMAT=webp
DEFAULT_OUTPUT_COMPRESSION=80

# Server Configuration
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/memoryframe_db
# CA_FILE=/path/to/ca-certificate.crt  # Percorso al certificato CA per SSL (opzionale)
# DATABASE_SSL_REJECT_UNAUTHORIZED=true  # Se false, accetta certificati autofirmati (default: true)

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# IP Hashing
IP_SALT=your-ip-salt-secret-change-in-production

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (for email verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@memoryframe.com
EMAIL_FROM_NAME=MemoryFrame

# Pricing
PRICE_PER_PHOTO_CREDIT=19
